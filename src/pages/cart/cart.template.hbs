<div class="container mx-auto mt-10">
  <div class="sm:flex shadow-md my-10">
    <div class="  w-full  sm:w-3/4 bg-white px-10 py-10">
      <div class="flex justify-between border-b pb-8">
        <h1 class="font-semibold text-2xl">Shopping Cart</h1>
        <h2 class="font-semibold text-2xl">3 Items</h2>
      </div>
      
        {{#if cart}}
            {{#each products}}
         <div class="md:flex items-strech py-8 md:py-10 lg:py-8 border-t border-gray-50">
           <div data-img="{{this.img}}" class="md:w-4/12 2xl:w-1/4 w-full">
             <img src="{{this.img}}" alt="Black Leather Purse" class="h-full object-center object-cover " />
           </div>
           <div class="md:pl-3 md:w-8/12 2xl:w-3/4 flex flex-col justify-center">
             <div class="flex items-center justify-between w-full">
               <p data-name="{{this.name}}" class="text-base font-black leading-none text-gray-800">{{this.name}}</p>
               <select aria-label="Select quantity" class="py-2 px-1 border border-gray-200 mr-6 focus:outline-none">
                   <option>01</option>
                   <option>02</option>
                   <option>03</option>
                 </select>
             </div>
              <div class="flex items-center justify-between pt-5">
   
                <button class="clear bg-gray-600 p-2 rounded-lg font-semibold hover:bg-gray-700 py-3 text-sm text-white uppercase"  caption="Remove" class-name="text-white">Remove</button>

                <p data-price="{{this.price}}" class="text-base font-black leading-none text-gray-800">{{this.price}}</p>

              </div>
           </div>
      </div>
      {{/each}}
        {{/if}}

      <a href="${props.routes.home}" class="flex font-semibold text-gray-600 text-sm mt-10">
        <svg class="fill-current mr-2 text-gray-600 w-4" viewBox="0 0 448 512">
          <path
            d="M134.059 296H436c6.627 0 12-5.373 12-12v-56c0-6.627-5.373-12-12-12H134.059v-46.059c0-21.382-25.851-32.09-40.971-16.971L7.029 239.029c-9.373 9.373-9.373 24.569 0 33.941l86.059 86.059c15.119 15.119 40.971 4.411 40.971-16.971V296z" />
        </svg>
        Continue Shopping
      </a>
    </div>
    <div id="summary" class=" w-full   sm:w-1/4   md:w-1/2     px-8 py-10">
      <h1 class="font-semibold text-2xl border-b pb-8">Order Summary</h1>
      <div class="flex justify-between mt-10 mb-5">
        <span class="font-semibold text-sm uppercase">Items 3</span>
        <span class="font-semibold text-sm">590$</span>
      </div>
      
      <div class="py-10">
        
      <div class="border-t mt-8">
        <div class="flex font-semibold justify-between py-6 text-sm uppercase">
          <span>Total cost</span>
          <span>$600</span>
        </div>
        <button class="bg-gray-600 font-semibold hover:bg-gray-700 py-3 text-sm text-white uppercase w-full">
              Checkout
            </button>
      </div>
    </div>
  </div>
</div>