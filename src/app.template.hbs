<div>
    <app-router>
        <app-route 
         path="${props.routes.home}"
         title="NORDICS" 
         component="home-page">
        </app-route>
        <app-route
         path="${props.routes.singIn}"
         title="Sign In"
         component="sign-in-page">
        </app-route>
        <app-route
         path="${props.routes.singUp}"
         title="Sign Up"
         component="sign-up-page">
        </app-route>
        <app-route
         path="${props.routes.account}"
         title="Account"
         component="user-account">
        </app-route>
        <app-route
         path="${props.routes.cart}"
         title="Cart Page"
         component="cart-page">
        </app-route>
        <app-route
         path="${props.routes.notFound}"
         title="404 | Not Found"
         component="not-found">
